{
  "name": "<%= package_name %>",
  "version": "<%= version %>",
  "description": "Connector description",
  "homepage": "<%= homepage_url %>",
  "repository": {
    "type": "git",
    "url": "<%= repository_url %>"
  },
  "bugs": {
    "url": "<%= bugs_url %>"
  },
  "license": "MIT",
  "author": {
    "name": "Hull",
    "email": "contact@hull.io",
    "url": "https://hull.io"
  },
  "keywords": [
    "hull",
    "ship",
    "connector",
    "hull-ship",
    "hull-connector",
    "hull-connector-template-<%= template_version %>"
  ],
  "engines": {
    "node": "8.11.x",
    "npm": "5.6.x",
    "yarn": "1.5.x"
  },
  "scripts": {
    "build": "yarn run build:clean && yarn run build:server && yarn run build:client",
    "build:clean": "rimraf dist && rimraf build",
    "build:server": "babel server -d build",
    "build:client": "NODE_ENV=production webpack --config ./webpack.config.js",
    "start": "node -r newrelic build",
    "start:dev": "NODE_ENV=development LOG_LEVEL=debug babel-watch -L server",
    "test": "yarn run test:lint && yarn run test:combined",
    "test:lint": "eslint server",
    "test:flow": "flow check",
    "test:combined": "NODE_ENV=test jest ./test",
    "test:unit": "NODE_ENV=test jest ./test/unit",
    "test:integration": "NODE_ENV=test jest ./test/integration",
    "postinstall": "yarn run build"
  },
  "dependencies": {
    "autoprefixer": "^8.3.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "bluebird": "^3.4.1",
    "body-parser": "^1.18.2",
    "css-loader": "^0.28.11",
    "express": "^4.16.3",
    "file-loader": "^1.1.11",
    "happypack": "^4.0.1",
    "hull": "0.13.14",
    "lodash": "^4.17.5",
    "moment": "^2.21.0",
    "newrelic": "^4.0.0",
    "postcss-flexbugs-fixes": "^3.3.0",
    "postcss-loader": "^2.1.4",
    "react": "^16.3.2",
    "react-hot-loader": "^4.0.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.20.3",
    "webpack": "^3.11.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "babel-jest": "^22.4.1",
    "babel-register": "^6.26.0",
    "babel-watch": "^2.0.7",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-flowtype-errors": "^3.3.6",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.14.1",
    "flow-bin": "^0.69.0",
    "flow-typed": "^2.4.0",
    "jest": "^22.4.2",
    "nock": "^9.0.14"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 90,
        "statements": 90
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "transform": {
      "^.+\\.js?$": "babel-jest"
    }
  }
}
